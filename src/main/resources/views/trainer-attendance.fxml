<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gym.ui.controllers.TrainerAttendanceController">

    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Label fx:id="headerLabel"
                   text="Attendance"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="attendanceTable" prefHeight="300">
            <columns>
                <TableColumn fx:id="memberColumn" text="Member" prefWidth="180"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                <TableColumn fx:id="attendedColumn" text="Attended" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Label fx:id="messageLabel" text=""/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="saveButton" text="Save &amp; award points" onAction="#onSaveClicked"/>
            <Button text="Close" onAction="#onCloseClicked"/>
        </HBox>
    </bottom>
</BorderPane>
