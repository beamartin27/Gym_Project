<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gym.ui.controllers.BookingController">

    <!-- Top: title + date picker -->
    <top>
        <HBox spacing="15" style="-fx-padding: 10 10 0 10;">
            <Button text="â† Back" onAction="#onBackClicked"/>
            <Label text="Book your next class"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label text="Date:"/>
            <DatePicker fx:id="datePicker"
                        onAction="#onDateChanged"/>
        </HBox>
    </top>

    <!-- Center: table with schedules -->
    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <TableView fx:id="scheduleTable" prefHeight="300">
                <columns>
                    <TableColumn fx:id="timeColumn" text="Time" prefWidth="120"/>
                    <TableColumn fx:id="classIdColumn" text="Class ID" prefWidth="100"/>
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="120"/>
                    <TableColumn fx:id="spotsColumn" text="Available spots" prefWidth="140"/>
                </columns>
            </TableView>
            <Label fx:id="selectionLabel" text="No class selected"/>
        </VBox>
    </center>

    <!-- Bottom: confirm button + message -->
    <bottom>
        <VBox spacing="8" style="-fx-padding: 10;">
            <Label fx:id="messageLabel" textFill="red"/>
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="Confirm class"
                        onAction="#onConfirmClicked"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
