<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gym.ui.controllers.TrainerDashboardController">

    <top>
        <HBox spacing="15" style="-fx-padding: 10 10 0 10;">
            <Label fx:id="welcomeLabel"
                   text="Trainer dashboard"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#onLogoutClicked"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label text="Upcoming classes"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <TableView fx:id="scheduleTable" prefHeight="350">
                <columns>
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
                    <TableColumn fx:id="timeColumn" text="Time" prefWidth="140"/>
                    <TableColumn fx:id="classColumn" text="Class" prefWidth="200"/>
                    <TableColumn fx:id="bookedColumn" text="Booked" prefWidth="80"/>
                    <TableColumn fx:id="capacityColumn" text="Capacity" prefWidth="80"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Label fx:id="infoLabel" text=""/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="View bookings" onAction="#onViewBookingsClicked"/>
            <Button text="Mark attendance" onAction="#onMarkAttendanceClicked"/>
        </HBox>
    </bottom>
</BorderPane>
