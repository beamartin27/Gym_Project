<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.gym.ui.controllers.ProgressController">

    <top>
        <HBox spacing="16" style="-fx-padding: 16;">
            <Button text="â† Back" onAction="#onBackClicked"/>
            <Label text="Your Progress"
                   style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 0 16 16 16;">

            <!-- PROGRESS BARS SECTION -->
            <TitledPane text="Progress Overview" expanded="true">
                <VBox spacing="12" style="-fx-padding: 10;">
                    <HBox spacing="10">
                        <Label text="Upper Body:"/>
                        <ProgressBar fx:id="upperBar" prefWidth="300"/>
                    </HBox>

                    <HBox spacing="10">
                        <Label text="Lower Body:"/>
                        <ProgressBar fx:id="lowerBar" prefWidth="300"/>
                    </HBox>

                    <HBox spacing="10">
                        <Label text="Arms:"/>
                        <ProgressBar fx:id="armsBar" prefWidth="300"/>
                    </HBox>

                    <HBox spacing="10">
                        <Label text="Cardio:"/>
                        <ProgressBar fx:id="cardioBar" prefWidth="300"/>
                    </HBox>
                </VBox>
            </TitledPane>

            <!-- RECENT COMPLETED CLASSES -->
            <TitledPane text="Recently Completed Classes" expanded="true">
                <TableView fx:id="recentTable" prefHeight="220">
                    <columns>
                        <TableColumn fx:id="recentClassColumn" text="Class" prefWidth="180"/>
                        <TableColumn fx:id="recentDateColumn" text="Date" prefWidth="100"/>
                        <TableColumn fx:id="recentFocusColumn" text="Focus" prefWidth="120"/>
                        <TableColumn fx:id="recentPointsColumn" text="Points" prefWidth="80"/>
                    </columns>
                </TableView>
            </TitledPane>

        </VBox>
    </center>

    <bottom>
        <HBox spacing="16" style="-fx-padding: 16;">
            <Label fx:id="messageLabel" textFill="red"/>
        </HBox>
    </bottom>

</BorderPane>
