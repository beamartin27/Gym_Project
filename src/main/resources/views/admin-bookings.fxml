<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gym.ui.controllers.AdminBookingsController">

    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Label text="All bookings"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Back to dashboard" onAction="#onBackClicked"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="bookingsTable" prefHeight="400" prefWidth="800">
            <columns>
                <TableColumn fx:id="idColumn" text="Booking ID" prefWidth="90"/>
                <TableColumn fx:id="userIdColumn" text="User ID" prefWidth="80"/>
                <TableColumn fx:id="scheduleIdColumn" text="Schedule ID" prefWidth="90"/>
                <TableColumn fx:id="bookingDateColumn" text="Booking date" prefWidth="200"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

</BorderPane>