<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gym.ui.controllers.AdminBookingsController"
            styleClass="admin-root">

    <!-- TOP: title + search / filters + back button -->
    <top>
        <VBox spacing="10" styleClass="admin-top">
            <Label text="All bookings" styleClass="admin-title"/>

            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="admin-toolbar">
                <!-- Search -->
                <TextField fx:id="searchField"
                           promptText="Search by member, class or trainer..."
                           styleClass="search-field"/>

                <!-- Status filter -->
                <Label text="Status:" styleClass="admin-label"/>
                <ComboBox fx:id="statusComboBox"
                          prefWidth="140"
                          styleClass="combo-filter"/>

                <!-- Search & clear buttons -->
                <Button text="Search"
                        onAction="#onSearchClicked"
                        styleClass="primary-button"/>
                <Button text="Clear"
                        onAction="#onClearClicked"
                        styleClass="secondary-button"/>

                <Pane HBox.hgrow="ALWAYS"/>

                <!-- Back -->
                <Button text="Back to dashboard"
                        onAction="#onBackClicked"
                        styleClass="back-button"/>
            </HBox>
        </VBox>
    </top>

    <!-- CENTER: table + bottom action -->
    <center>
        <VBox spacing="10" styleClass="admin-center">

            <TableView fx:id="bookingsTable"
                       prefHeight="400"
                       prefWidth="900"
                       styleClass="admin-table">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="memberColumn" text="Member" prefWidth="130"/>
                    <TableColumn fx:id="classColumn" text="Class" prefWidth="150"/>
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="120"/>
                    <TableColumn fx:id="timeColumn" text="Time" prefWidth="120"/>
                    <TableColumn fx:id="bookedAtColumn" text="Booked at" prefWidth="210"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                </columns>
            </TableView>

            <HBox alignment="CENTER_RIGHT">
                <Button text="Cancel selected booking"
                        onAction="#onCancelSelectedClicked"
                        styleClass="primary-button"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>